@model OnlineApp.Models.Classes.Current
@{
    ViewBag.Title = "FetchCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Current Update</h2>

<br />


@using (Html.BeginForm("CurrentUpdate", "Current", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.CurrentId)
    @Html.LabelFor(x => x.CurrentName)
    @Html.TextBoxFor(x => x.CurrentName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CurrentName, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.CurrentSurname)
    @Html.TextBoxFor(x => x.CurrentSurname, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CurrentSurname, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.CurrentCity)
    @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CurrentMail)
    @Html.TextBoxFor(x => x.CurrentMail, new { @class = "form-control" })
    <br />
</div>
    <button class="btn btn-default" style="background-color:powderblue">Update</button>
}