@using OnlineApp.Models.Classes
@model List<Current>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />


<table id="tbl1" class="table table-striped">
    <thead>
        <tr>
            <th>Current ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>City</th>
            <th>Mail</th>
            <th>Remove</th>
            <th>Update</th>
            <th>Details</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CurrentId</td>
            <td>@x.CurrentName</td>
            <td>@x.CurrentSurname</td>
            <td>@x.CurrentCity</td>
            <td>@x.CurrentMail</td>
            <td><a href="/Current/RemoveCurrent/@x.CurrentId" class="btn btn-danger">Remove</a></td>
            <td><a href="/Current/FetchCurrent/@x.CurrentId" class="btn btn-warning">Update</a></td>
            <td><a href="/Current/CurrentSales/@x.CurrentId" class="btn btn-default" style="background-color:cornflowerblue; color:white">Sales History</a></td>
        </tr>
    }
</table>
<a href="/Current/AddCurrent" class="btn btn-info">Add New Current</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>
