@using OnlineApp.Models.Classes
@model List<SalesTransaction>
@{
    ViewBag.Title = "CurrentSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Current Sales</h2>

<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Current Name: @ViewBag.ce</li>
</ol>

<table class="table table-condensed">
    <tr>
        <th>Sales Id</th>
        <th>Product</th>
        <th>Employee</th>
        <th>Price</th>
        <th>Number</th>
        <th>Total</th>
        <th>Date</th>
        <th>Print</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SalesId</td>
            <td>@x.Product.ProductName</td>
            <td>@x.Employee.EmployeeName  @x.Employee.EmployeeSurname</td>
            <td>@x.Price</td>
            <td>@x.Number</td>
            <td>@x.AggregateAmount</td>
            <td>@x.Date.ToString("MM/dd/yyyy")</td>
            <td><a href="#" class="btn btn-default" style="background-color:lightcoral">Print</a></td>
        </tr>
    }

</table>