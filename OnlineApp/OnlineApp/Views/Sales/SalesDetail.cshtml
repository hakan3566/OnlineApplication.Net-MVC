@using OnlineApp.Models.Classes
@model List<SalesTransaction>
@{
    ViewBag.Title = "SalesDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Sales Detail</h2>

<br />

<table class="table table-condensed">
    <tr>
        <th>Sales Id</th>
        <th>Product</th>
        <th>Current</th>
        <th>Employee</th>
        <th>Price</th>
        <th>Number</th>
        <th>Total</th>
        <th>Date</th>
        
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.SalesId</td>
    <td>@x.Product.ProductName</td>
    <td>@x.Current.CurrentName  @x.Current.CurrentSurname</td>
    <td>@x.Employee.EmployeeName  @x.Employee.EmployeeSurname</td>
    <td>@x.Price</td>
    <td>@x.Number</td>
    <td>@x.AggregateAmount</td>
    <td>@x.Date.ToString("MM/dd/yyyy")</td>
    
</tr>
    }

</table>
<button class="btn btn-default" style="background-color:lightcoral">Print</button>

