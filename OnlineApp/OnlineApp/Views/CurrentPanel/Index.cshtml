@model OnlineApp.Models.Classes.Current
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CurrentLayout.cshtml";
}

<br />
<h2>Online App Current Info Panel</h2>

@using (Html.BeginForm("Index2", "CurrentPanel", FormMethod.Post)) 
{ 
<table class="table table-hover">
    <tr>
        <td>
            <label>Mail: @HttpContext.Current.User.Identity.Name</label>
        </td>
    </tr>
    <tr>
        <td>@Html.TextBoxFor(x => x.CurrentName, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>@Html.TextBoxFor(x => x.CurrentSurname, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>@Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>@Html.TextBoxFor(x => x.CurrentPassword, new { @class = "form-control" })</td>
    </tr>
</table>
<button class="btn btn-warning">Update My Info</button>
}