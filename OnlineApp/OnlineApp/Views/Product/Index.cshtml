@using OnlineApp.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>            
            <th>PRODUCT</th>
            <th>BRAND</th>
            <th>STOCK</th>
            <th>PURCHASE PRICE</th>
            <th>SALE PRICE</th>
            <th>CATEGORY</th>            
            <th>REMOVE</th>
            <th>UPDATE</th>
        </tr>
    </thead>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductName</td>
            <td>@p.Brand</td>
            <td>@p.Stock</td>
            <td>@p.PurchasePrice $</td>
            <td>@p.SalePrice $</td>
            <td>@p.Category.CategoryName</td>
            <td>
                <a href="/Product/RemoveProduct/@p.ProductId" class="btn btn-danger">Remove</a>
            </td>
            <td>
                <a href="/Product/FetchProduct/@p.ProductId" class="btn btn-success">Update</a>
            </td>

        </tr>
    }
</table>
<a href="/Product/NewProduct/" class="btn btn-info">New Product</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>