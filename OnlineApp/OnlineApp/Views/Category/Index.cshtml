@using OnlineApp.Models.Classes
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table  class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            
            <th>Category Name</th>
            <th>Remove</th>
            <th>Update</th>
        </tr>
    </thead>


    @foreach (var k in Model)
    {

        <tr>
            
            <td>@k.CategoryName</td>
            <td><a href="/Category/RemoveCategory/@k.CategoryId" class="btn btn-danger">Remove</a></td>
            <td><a href="/Category/FetchCategory/@k.CategoryId" class="btn btn-success">Update</a></td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page }))

<a href="/Category/AddCategory" class="btn btn-primary">Add Category</a>

