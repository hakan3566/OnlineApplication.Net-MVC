@using OnlineApp.Models.Classes
@model List<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Employee Name</th>
            <th>Employee Surname</th>
            <th>Image</th>
            <th>Department</th>
            <th>Update</th>
            <th>Sales</th>
        </tr>
    </thead>

    @foreach (var k in Model)
    {

        <tr>
            <td>@k.EmployeeId</td>
            <td>@k.EmployeeName</td>
            <td>@k.EmployeeSurname</td>
            <td>
                <img src="@k.EmployeeImage" style="width:100px; height:50px;" />
            </td>
            <td>@k.Department.DepartmentName</td>
            <td><a href="/Employee/FetchEmployee/@k.EmployeeId" class="btn btn-warning">Update</a></td>
            <td><a href="/Department/DepartmentEmployeeSales/@k.EmployeeId" class="btn btn-default" style="background-color:cornflowerblue; color:white">Detail</a></td>
        </tr>
    }

</table>

<a href="/Employee/AddEmployee" class="btn btn-info">Add Employee</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>