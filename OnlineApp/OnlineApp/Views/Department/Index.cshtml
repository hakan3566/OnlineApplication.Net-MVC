@using OnlineApp.Models.Classes
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table  id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Department Name</th>
            <th>Remove</th>
            <th>Update</th>
            <th>Details</th>
        </tr>
    </thead>

    @foreach (var k in Model)
    {

        <tr>
            <td>@k.DepartmentId</td>
            <td>@k.DepartmentName</td>
            <td><a href="/Department/RemoveDepartment/@k.DepartmentId" class="btn btn-danger">Remove</a></td>
            <td><a href="/Department/FetchDepartment/@k.DepartmentId" class="btn btn-warning">Update</a></td>
            <td><a href="/Department/DepartmentDetail/@k.DepartmentId" class="btn btn-default" style="background-color:cornflowerblue; color:white">Detail</a></td>
        </tr>
    }

</table>

<a href="/Department/AddDepartment" class="btn btn-info">Add Department</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>