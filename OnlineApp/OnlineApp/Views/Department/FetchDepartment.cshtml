@model OnlineApp.Models.Classes.Department
@{
    ViewBag.Title = "FetchDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Department Update</h2>
<br />


@using (Html.BeginForm("DepartmentUpdate", "Department", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.DepartmentName)
        @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
        @Html.HiddenFor(x => x.DepartmentId)
    </div>
    <button class="btn btn-default" style="background-color:powderblue">Update</button>
}

