@using OnlineApp.Models.Classes
@model List<Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>


<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Serial Number</th>
            <th>Order Number</th>
            <th>Tax Administration</th>
            <th>Date</th>
            <th>Time</th>
            <th>Deliverer</th>
            <th>Recipient</th>
            <th>Total</th>
            <th>Update</th>
            <th>Details</th>
        </tr>
    </thead>

    @foreach (var k in Model)
    {

        <tr>
            <td>@k.InvoiceId</td>
            <td>@k.InvoiceSerialNumber</td>
            <td>@k.InvoiceOrderNumber</td>
            <td>@k.TaxAdministration</td>
            <td>@k.InvoiceDate</td>
            <td>@k.Time</td>
            <td>@k.Deliverer</td>
            <td>@k.Recipient</td>
            <td>@k.Total</td>
            <td><a href="/Invoice/FetchInvoice/@k.InvoiceId" class="btn btn-warning">Update</a></td>
            <td><a href="/Invoice/InvoiceDetail/@k.InvoiceId" class="btn btn-default" style="background-color:cornflowerblue; color:white">Detail</a></td>
        </tr>
    }

</table>

<a href="/Invoice/AddInvoice" class="btn btn-info">Add Invoice</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>